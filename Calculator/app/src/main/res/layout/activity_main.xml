<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainredBox"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siddiqui.calculator.MainActivity"
    android:orientation="vertical"
    android:background="#000">

<LinearLayout
    android:id="@+id/mainGreenBox"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:layout_margin="0dp"
    android:background="#000">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
android:textColor="#fff"

        android:layout_weight="14" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        style="@style/gangnamestyle4"
        android:layout_weight="1"
        android:text="X"/>

</LinearLayout>
   <LinearLayout
       android:id="@+id/blueBox"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:background="#000"
       android:layout_weight="7"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginBottom="30dp">
<LinearLayout
    android:id="@+id/orangeBox1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:background="#000"
    android:layout_weight="5"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:textSize="15dp"
        style="@style/gangnamestyle"

        android:text="sin"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/gangnamestyle"
        android:textSize="15dp"
        android:layout_margin="2dp"

        android:text="cos"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/gangnamestyle"
        android:textSize="15dp"
        android:layout_margin="2dp"
        android:text="tan"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/gangnamestyle"
        android:textSize="15dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:text="π"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:textSize="15dp"
        style="@style/gangnamestyle"
        android:text="!"/>

</LinearLayout>

       <LinearLayout
           android:id="@+id/orangeBox2"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:background="#000"
           android:layout_weight="5"
           android:orientation="vertical"
           android:layout_marginRight="30dp">

           <Button
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_margin="2dp"
               style="@style/gangnamestyle"
               android:textSize="15dp"
               android:text="ln"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_margin="2dp"
               android:textSize="15dp"
               style="@style/gangnamestyle"
               android:text="log"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               style="@style/gangnamestyle"
               android:textSize="15dp"
               android:layout_margin="2dp"
               android:text="e"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               style="@style/gangnamestyle"
               android:textSize="15dp"
               android:layout_margin="2dp"
               android:text="^"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_margin="2dp"
               style="@style/gangnamestyle"
               android:textSize="15dp"
               android:text="√"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/blackBox"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:background="#000"
           android:layout_weight="21"
           android:orientation="vertical">
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:background="#000"
               android:id="@+id/dnfkj">

               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="2dp"
                   style="@style/gangnamestyle3"
                   android:text="7"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="2dp"
                   style="@style/gangnamestyle3"
                   android:text="8"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="2dp"
                   style="@style/gangnamestyle3"
                   android:text="9"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"

                   android:layout_margin="2dp"
                   style="@style/gangnamestyle2"
                   android:text="÷"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="2dp"
                   style="@style/gangnamestyle2"
                   android:text="("/>
           </LinearLayout>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#000"
               android:id="@+id/greenb2">

               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="2dp"
                   style="@style/gangnamestyle3"
                   android:text="4"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_margin="2dp"
                   style="@style/gangnamestyle3"
                   android:text="5"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/gangnamestyle3"
                   android:layout_margin="2dp"
                   android:text="6"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/gangnamestyle2"
                   android:layout_margin="2dp"
                   android:text="x"/>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/gangnamestyle2"
                   android:layout_margin="2dp"
                   android:text=")"/>
           </LinearLayout>
           
           <LinearLayout
               android:id="@+id/blackBox2"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:background="#000"
               android:layout_weight="2">
               <LinearLayout
                   android:id="@+id/redBox1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="4"
                   style="@style/gangnamestyle3"
                   android:background="#000"
                   android:orientation="vertical">

                   <LinearLayout
                       android:id="@+id/greenBox3"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:background="#000">
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           style="@style/gangnamestyle3"
                           android:layout_margin="2dp"
                           android:text="1"/>
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:layout_margin="2dp"
                           style="@style/gangnamestyle3"

                           android:text="2"/>
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:layout_margin="2dp"
                           style="@style/gangnamestyle3"
                           android:text="3"/>
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           style="@style/gangnamestyle2"
                           android:layout_margin="2dp"
                           android:text="-"/>

                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/greenBox4"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:background="#000">
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="2"
                           style="@style/gangnamestyle3"
                           android:layout_margin="2dp"
                           android:text="0"/>
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:layout_margin="2dp"
                           style="@style/gangnamestyle3"
                           android:text="."/>
                       <Button
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:layout_margin="2dp"
                           style="@style/gangnamestyle2"
                           android:text="+"/>

                   </LinearLayout>

           </LinearLayout>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/gangnamestyle2"
                   android:layout_margin="2dp"
                   android:text="="/>
           
       </LinearLayout>
</LinearLayout>
   </LinearLayout>
</LinearLayout>
